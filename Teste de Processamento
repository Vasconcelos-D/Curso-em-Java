package teste_processamento2;

public class Main1 {

	public static void main(String[] args) {
	// Atribuindo tipo da variavél
	int a, b ;
	double resultado;
	//Atribuindo valores as variavéis
	
	a = 5;
	b = 2;
	
	//Execultando a operação, que dará valor a variavél resultado.
	
	resultado = (double) a / b;
	
	//Obs: Em exemplos de divisão de inteiros, mesmo sendo pra um resultado double o programa vai reconhecer como divisão de inteiros.
	//Pra isso prescisa ser feito o Castinh( conversão ). Usa -se (doble) entre parentes, para dizer que ali vai ser uma divisão de ponto flutuante.
	//Para que o resultado seja gerado com as casas decimais.
	
	System.out.println(resultado);
	
	//Como dica de boa prática!!
	//Sempre idique o tipo de número, se a expressão for de ponto flutuante (não inteira).
	//Para double use: .0
	
	// b = 6.0
	// c = 5.0
	// d = 4.0
	
	//Para float use: f
	
	// b = f
	// c = f
	// d = f
	
	}

}
