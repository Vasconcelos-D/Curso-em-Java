package funcoes_matematicas;
import java.util.Scanner;
import java.util.Locale;
public class Main2 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		//objeto de entrada usando o metodo Scanner. Para receber dados dos teclado.
		Scanner input = new Scanner(System.in);
	
		// Declarando os tipos de variavéis
		double x;
		double y;
		double z;
		
		double A, B, C;
		
		//Atribuindo os tipos de cada variavél para o metodo de entrada.
		x = input.nextDouble();
		y = input.nextDouble();
		z = input.nextDouble();
		
	
		//Atribuindo codigo de funções matemáticas
		//Raiz quadrada
		A = Math.sqrt(x);
		B = Math.sqrt(y);
		C = Math.sqrt(25.0);
		
		// chamando o metodo Print, para imprimir na tela  o resultado
		System.out.println("Raiz quadrada de " + x + " = " + A);
		System.out.println("Raiz quadrada de " + y + " = " + B);
		System.out.println("Raiz quadrada de 25 = " + C);
		
		//Atribuindo codigo de funções matemáticas
		//Elevado ao quadrado
		A = Math.pow(x, y);
		B = Math.pow(x, 2.0);
		C = Math.pow(5.0, 2.0);
		
		System.out.println(x + "Elevado a " + y + " = " + A);
		System.out.println(x + "Elevado ao quadrado = " + B);
		System.out.println("5 Elevado ao quadrado = " + C);
		
		
		//Atribuindo codigo de funções matemáticas
		//Valor absoluto
		A = Math.abs(y);
		B = Math.abs(z);
		
		System.out.println("Valor absoluto de " + y + " ="  + A);
		System.out.println("Valor absoluto de " + z + " = " +B);
		
		
		input.close();// Fim do metado Scanner

	}

}
